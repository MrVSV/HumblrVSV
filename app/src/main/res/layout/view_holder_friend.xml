<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/friendFrame"
        android:layout_width="150dp"
        android:layout_height="176dp"
        android:layout_marginTop="@dimen/user_margin_top"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/layout_bg"
        android:elevation="@android:dimen/app_icon_size"
        android:layout_margin="@dimen/header_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/friendPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="@dimen/friend_photo_margin_top"
            android:background="@drawable/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendName"
            android:text="Beginning_Android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_margin_top"
            android:background="@drawable/round_corners_20alfa_btn"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginHorizontal="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendPhoto" />

        <TextView
            android:id="@+id/friendId"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_margin_top"
            android:background="@drawable/round_corners_20alfa_btn"
            android:text="@string/user_id"
            android:textAlignment="center"
            android:textSize="@dimen/karma_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendName" />

    </LinearLayout>
</FrameLayout>